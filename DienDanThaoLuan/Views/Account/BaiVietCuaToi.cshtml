@using DienDanThaoLuan.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<BaiVietView>

@{
    ViewBag.Title = "Bài Viết Của Tôi";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .admin {
        background-color: #e7f3ff;
        border-left: 2px solid #007bff;
        padding: 15px;
        margin-bottom: 15px;
        box-shadow: 0 2px 10px rgba(0, 123, 255, 0.3);
        border-radius: 5px;
    }
</style>
<div class="row my-5">
    <!-- Left Column -->
    <div class="col-md-12">
        <!-- User's Posts -->
        <div class="flex-grow-1 me-3 bg-white p-2 rounded">
            <div class="d-flex justify-content-end mb-2">
                <h2 style="font-weight: bold; margin-right: auto; margin-left: 5px; color: gray">Bài viết của tôi</h2>
                <div class="me-2">
                    <button onclick="location.href='@Url.Action("ThemBV", "BaiViet")'" class="btn btn-primary">Thêm bài</button>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning">Chưa có bài viết nào</div>
            }
            <!-- Post Items -->
            @foreach (var t in Model)
            {
                <div class="mb-1 rounded-0 border-top pt-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex align-items-center">
                                <img src="~/Images/avatar.jpg" alt="User Avatar" class="img-fluid rounded-circle" width="50">
                                <div class="ms-3">
                                    <h5 class="card-title mb-1">
                                        <a href="@Url.Action("NDBaiViet", "BaiViet", new { id = t.BaiViet.MaBV })" class="text-decoration-none text-dark">@t.BaiViet.TieuDeBV</a>
                                    </h5>
                                    <p class="text-muted">@t.BaiViet.NguoiDung.TenDangNhap</p>
                                </div>
                            </div>
                            <div class="text-end">
                                <p class="mb-1">Ngày đăng: <span class="text-muted">@t.BaiViet.NgayDang</span></p>
                                <p class="mb-0">
                                    Trả lời: <span class="text-muted">@t.SoBL</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("BaiVietCuaToi", new { page = page }))
        </div>
    </div>

</div>
